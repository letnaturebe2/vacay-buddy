            }, 1000);
          });
        } else {
          // Error case - use message field from error response
          const errorMessage = result.message || result.error || 'Ïïå Ïàò ÏóÜÎäî Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§';
          showErrorModal(`Ï†ÄÏû• Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§: ${errorMessage}`);
        }
      } catch (error) {
        console.error('Save error:', error);
        if (error.name === 'TypeError' && error.message.includes('fetch')) {
          showErrorModal('ÏÑúÎ≤ÑÏóê Ïó∞Í≤∞Ìï† Ïàò ÏóÜÏäµÎãàÎã§. ÎÑ§Ìä∏ÏõåÌÅ¨ Ïó∞Í≤∞ÏùÑ ÌôïÏù∏Ìï¥Ï£ºÏÑ∏Ïöî.');
        } else {
          showErrorModal(`Ï†ÄÏû• Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§: ${error.message || 'Ïïå Ïàò ÏóÜÎäî Ïò§Î•ò'}`);
        }
      } finally {
        $('#batchSaveBtn').prop('disabled', false).text('Î™®Îì† Î≥ÄÍ≤ΩÏÇ¨Ìï≠ Ï†ÄÏû•');
      }
    }

    function cancelEditMode() {
      if (Object.keys(pendingChanges).length > 0) {
        showConfirmModal('Î≥ÄÍ≤ΩÏÇ¨Ìï≠Ïù¥ ÏûàÏäµÎãàÎã§. Ï†ïÎßê Ï∑®ÏÜåÌïòÏãúÍ≤†ÏäµÎãàÍπå?', () => {
          // Restore original values
          for (const userId in pendingChanges) {
            const $row = $(`tr[data-user-id="${userId}"]`);
            
            for (const field in pendingChanges[userId]) {
              const originalValue = originalData[userId][field];
              const $cell = $row.find(`[data-field="${field}"]`);
              
              $cell.data('original', originalValue);
              $cell.find('.cell-value').text(originalValue + 'Ïùº');
