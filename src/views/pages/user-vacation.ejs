      .pto-info-item {
        padding: 20px 15px;
      }
      
      .pto-info-item .value {
        font-size: 2rem;
      }
      
      .year-selector {
        flex-direction: column;
        gap: 15px;
        padding: 20px;
        text-align: center;
      }
      
      .year-selector select {
        min-width: 140px;
      }
      
      #ptoTable thead th {
        padding: 12px 8px !important;
