      /* Mobile status badges */
      .status-approved,
      .status-pending,
      .status-rejected,
      .status-completed,
      .status-ongoing,
      .status-scheduled {
        padding: 4px 8px;
        font-size: 0.7rem;
        gap: 3px;
        border-radius: 12px;
      }
      
            /* Mobile deleted row styling */
      .deleted-row .dtr-title {
        color: #9ca3af !important;
        text-decoration: line-through;
      }
      
      .deleted-row .dtr-data {
        color: #9ca3af !important;
        text-decoration: line-through;
      }
      
      /* Hide edit/delete features on mobile */
      .edit-toggle,
      .edit-column {
        display: none !important;
      }
    
    @media (max-width: 480px) {
      .container {
        padding: 0 10px;
      }
      
      h1 {
        font-size: 1.8rem;
      }
      
      .pto-card {
        padding: 15px;
      }
      
      .pto-info-item .value {
        font-size: 1.8rem;
      }
    }
  </style>
