{
  "name": "vacaybuddy",
  "version": "1.0.0",
  "description": "A Slack app for easily requesting, approving, and managing PTO directly within Slack",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node ./dist/app.js",
    "lint": "npx @biomejs/biome check src",
    "lint:fix": "npx @biomejs/biome check --write src",
    "test": "npm run build && npm run lint && npm run test:jest",
    "dev-socket": "nodemon --ext ts --exec ts-node src/app.ts",
    "dev-http": "nodemon --ext ts --exec ts-node src/app-prod.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "test:jest": "jest",
    "migration:generate": "ts-node --require dotenv/config ./node_modules/typeorm/cli.js migration:generate src/migration/migration/ -d src/db.ts",
    "migration:run": "ts-node --require dotenv/config ./node_modules/typeorm/cli.js migration:run -d src/db.ts"
  },
  "author": "letnaturebe",
  "license": "MIT",
  "keywords": [
    "slack",
    "bolt",
    "pto",
    "vacation",
    "timeoff",
    "typescript",
    "slackapp"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/letnaturebe2/vacay-buddy.git"
  },
  "bugs": {
    "url": "https://github.com/letnaturebe2/vacay-buddy/issues"
  },
  "dependencies": {
    "@slack/bolt": "^4.2.0",
    "@types/xlsx": "^0.0.35",
    "dotenv": "~16.4.7",
    "express": "^5.0.1",
    "i18next": "^24.2.3",
    "mysql2": "^3.14.0",
    "openai": "^4.85.2",
    "reflect-metadata": "^0.2.2",
    "typeorm-naming-strategies": "^4.1.0",
    "xlsx": "^0.18.5",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "sqlite3": "^5.1.7",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.21",
    "typescript": "^5.7.3"
  }
}
